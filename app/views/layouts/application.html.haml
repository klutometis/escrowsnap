  = javascript_include_tag :defaults, 'jquery', 'less', 'jquery.timelinr'
  = csrf_meta_tag
%body
  .topbar
    .container.fixed
      %h3
        %a.logo EscrowSnap
      %ul
        %li 
          %a Home
        %li
          %a Link
        %li
          %a Link
        %li
          %a Link
      %ul.nav.secondary-nav
        %li.menu
          %a.menu Dropdown
          %ul.menu-dropdown
            %li
              %a Secondary Link
            %li
              %a Something else here
            %li.divider
            %li
              %a Another link
        
  #main.container
    .row
      .span3.columns
        = yield :sidebar
      .span13.columns
        = yield